<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/withe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Desarrolladores">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/portada">

            </LinearLayout>

            <LinearLayout

                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginBottom="50dp"
                    android:fontFamily="@font/letra3"
                    android:text="La Dirección de Comunicación Social e Imagen Institucional de la Universidad Politécnica de Pachuca, en busca de nuevas propuestas para generar un Ambiente de Sana Convivencia, pone puntual atención en la problemática de la Violencia que se da en las relaciones interpersonales, buscando crear un mecanismo que propicie la reflexión y la toma de decisión."/>

            </LinearLayout>

            <ImageView
                android:id="@+id/cast"
                android:layout_margin="5dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/pablotarget1"/>

            <ImageView
                android:id="@+id/isla"
                android:layout_margin="5dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/islastarget1"/>

            <ImageView
                android:id="@+id/tris"
                android:layout_margin="5dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/tristantarget1"/>


            <ImageView
                android:id="@+id/zaval"
                android:layout_margin="5dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/zavalatarget1"/>

            <ImageView
                android:id="@+id/upptargeta"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:src="@drawable/upptarget1"/>

            <TextView
                android:id="@+id/referencia"
                android:layout_margin="20dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="15dp"
                android:fontFamily="@font/letra3"
                android:textColor="@color/hiper"
                android:text="Referencias"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>